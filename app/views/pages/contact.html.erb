        <div class="col-12 form-group">
          <label for="message">Montant du projet à financier</label>
          <input name="budget" type="text" class="form-control" id="message" placeholder="Ex : 250 000">
        </div>

        <div class="col-6 form-group">
          <label>Prénom</label>
          <input name="firstname" type="text" id="First name" class="form-control" placeholder="Votre prénom">
        </div>

        <div class="col-6 form-group">
          <label>Nom</label>
          <input name="lastname" type="text" id="Last name" class="form-control" placeholder="Votre nom">
        </div>

        <div class="col-6 form-group">
          <label for="email">Email</label>
          <input name="email" type="email" id="email" class="form-control" placeholder="Votre email">
        </div>

        <div class="col-6 form-group">
          <label for="example-tel-input">Téléphone</label>
          <input name="phone" type="tel" id="example-tel-input" class="form-control" placeholder="Votre téléphone">
        </div>

        <div class="col-12 form-group">
          <label for="message">Code postal</label>
          <input name="postcode" type="text" class="form-control" id="message" placeholder="Ex : 44680">
        </div>

